<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between ">
        <div class="w-1/2">
             <h6 class="text-lg"><em>Are you Hungry?</em></h6>
             <h1 class="text-6xl font-bold">Don't Wait</h1>
             <button class=" btn_primary px-6 py-2 rounded-full text-white font-bold">Order Now</button>
        </div>
         
        <div class="w-1/2">
            <img src="/img/hero-pizza.png" alt="">
        </div>
    </div>    
</section>


<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8"> All Pizzas</h1>
    <div class="grid grid-cols-4 col-gap-12 row-gap-16">
      <% pizzas.forEach(function(pizzas){ %> 
        <div>
           <img class="h-40 mb-8 mx-auto" src="/img/<%= pizzas.image %>" alt="">
           <div class="text-center">
               <h2 class="mb-4 text-lg"><%= pizzas.name%></h2>
               <span class="size py-1 px-4  rounded-full uppercase text-xs"><%= pizzas.size %></span>
               <div class="flex items-center justify-around mt-6 ">
                    <span class="font-bold text-lg ">â‚¹<%= pizzas.price%></span>
                    <button data-pizza ="<%=JSON.stringify(pizzas)%>" class="add-to-cart py-1 px-6 rounded-full items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
               </div>
           </div>
          </div>
      <%  }); %>

    </div>

</section>